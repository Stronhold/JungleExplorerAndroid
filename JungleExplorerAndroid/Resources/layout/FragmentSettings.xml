<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:minWidth="25px"
    android:minHeight="25px"
    android:id="@+id/generalLayout"
    android:paddingTop="10dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp">
    <TextView
        android:text="Set default location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLocation"
        android:textColor="#ff000000"
        android:clickable="true"
        android:textSize="20dp" />
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/layoutToggle"
        android:layout_below="@id/textViewLocation">
        <TextView
            android:text="Activate notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNoti"
            android:textColor="#ff000000"
            android:textSize="20dp" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/SwitchNotifications"
            android:layout_toRightOf="@id/textViewNoti"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/layoutToggle2"
        android:layout_below="@id/layoutToggle">
        <TextView
            android:text="Activate GPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewAsyncGPS"
            android:textColor="#ff000000"
            android:layout_below="@id/textViewNoti"
            android:textSize="20dp" />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/switchGPS"
            android:layout_toRightOf="@id/textViewAsyncGPS"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>